<% layout('layouts/boilerplate') %>
<script src="/js/filter.js"></script>

<style>
#filters{
  display:flex;
  align-items:center;
  gap:0.7rem;
  overflow:hidden;
  margin-top: 1.75rem;
  margin-bottom:1rem;
}

.filter-scroll{
  display:flex;
  flex-wrap:nowrap;
  overflow-x:auto;
  gap:1.5rem;
  flex:1;
  -webkit-overflow-scrolling: touch;
}

.filter-scroll::-webkit-scrollbar{
  display:none;
}

.filters{
  flex:0 0 auto;
  text-align:center;
  min-width:70px;
  opacity:.7;
  min-width:55px;
}

.filters:hover{
  opacity:1;
  cursor:pointer;
  text-decoration:underline;
}

.filters p{
  font-size:.95rem;
  margin:0;
}

.filters i{
  font-size:.95rem;
}

.filters.active{
  opacity:1;
  font-weight:600;
  text-decoration:underline;
}

.tax-toggle{
  flex-shrink:0;
  border:1px solid black;
  border-radius:1rem;
  height:3.25rem;
  padding:1rem;
  display:flex;
  align-items:center;
  white-space:nowrap;
  margin-top: .5rem;
}

.tax-info{
  display:none;
}

.card{
  border:none!important;
}

.listing-link{
  text-decoration:none!important;
}

.card-text{
  border-bottom:none!important;
}

@media(max-width:576px){

  .filters{
    min-width:55px;
  }

  .filters i{
    font-size:.9rem;
  }

  .filters p{
    font-size:.7rem;
  }
}

@media(max-width:768px){

  #filters{
    flex-direction:column;
    align-items:stretch;
  }

  .filter-scroll{
    width:100%;
    order:1;
    padding-bottom:6px;
  }

  .tax-toggle{
    order:2;
    width:100%;
    margin-top:10px;
    justify-content:center;
  }
} 
</style>

    <div id="filters">
        <div class="filter-scroll">
        <div class="filters" data-filter="all">
            <div><i class="fa-solid fa-location-crosshairs"></i></div>
            <p>All</p>
        </div>
        <div class="filters" data-filter="rooms">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filters" data-filter="beach">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>
        <div class="filters" data-filter="villa">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Villas</p>
        </div>
        <div class="filters" data-filter="mountain">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filters" data-filter="forest">
            <div><i class="fa-solid fa-tree-city"></i></div>
            <p>Forests</p>
        </div>
        <div class="filters" data-filter="pool">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Pools</p>
        </div>
        <div class="filters" data-filter="camping">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filters" data-filter="farm">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filters" data-filter="arctic">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filters" data-filter="domes">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filters" data-filter="boats">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <p>Boats</p>
        </div>
    </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4">
        <% for (let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link listing-card col" data-category="<%= listing.category %>">
        <div class="card" >
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text text-dark">
                    <b><%= listing.title %></b><br>
                    &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/ night
                    <i class="tax-info">&nbsp; <b>+18% GST</b></i>
                </p>
            </div>
        </div>  
        </a>  
        <% } %>
    </div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault")
    taxSwitch.addEventListener("click", () => {
    
    let taxInfo = document.getElementsByClassName("tax-info")
    for(let info of taxInfo){
        if(info.style.display != "inline"){
            info.style.display = "inline"
        } else {
            info.style.display = "none"
        }
    }
    })
</script>